<form class="form">
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <div class="radio-inline">
          <label>
            <input type="radio" name="optionsRadios" id="revenueRadio" value="revenue" checked>收入
          </label>
        </div>
        <div class="radio-inline">
          <label>
            <input type="radio" name="optionsRadios" id="expenseRadio" value="expense">开支
          </label>
        </div>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <label for="exampleInputEmail1">日期</label>
        <div class="input-with-icon">
          <input type="text" id="formEntryDate" class="form-control" data-provide="datepicker">
          <span class="icon icon-calendar"></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <label>单据号</label>
        <input type="text" class="form-control" id="form_invoice_number" placeholder="10048">
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <label>类型</label>
        <input type="text" class="form-control" id="form_invoice_number" placeholder="工资／男装／女装">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <label>客户／供货商</label>
        <input type="text" class="form-control" id="form_vendor_name" placeholder="Max Mara">
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <label>国家</label>
        <input type="text" class="form-control" id="form_vendor_name" placeholder="津巴布韦">
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">简述</label>
    <textarea class="form-control" rows="3" placeholder="修电脑费用"></textarea>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">总数</label>
    <input type="number" min=0 class="form-control" id="form_vendor_name" placeholder="4500">
  </div>

  <div class="form-group">
    <label for="exampleInputFile">上传收据</label>
    <input type="file" id="form_invoice_image">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>