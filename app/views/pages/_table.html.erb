<table class="table tablesorter" id="historyTable" data-sort="table">
    <thead>
      <tr>
        <th><input type="checkbox" class="select-all" id="selectAll"></th>
        <th>日期</th>
        <th>类</th>
        <th>单据号</th>
        <th>客户／供货商</th>
        <th>类型</th>
        <th>简述</th>
        <th>国家</th>
        <th>总数</th>
      </tr>
    </thead>
    <tbody>
      <% records.each do |record| %>
      <tr>
        <td><input type="checkbox" class="select-row" ></td>
        <td><%= record.date %></td>
        <td><%= record.kindof %></td>
        <td><a data-toggle="modal" data-target="#myModal" data-invoice="<%= record.doc_img %>">#<%= record.invoice_number %></td>
        <td><%= record.kindof == "Revenue" ? record.client : record.vendor %></td>
        <td><%= record.category %></td>
        <td><%= record.description %></td>
        <td><%= record.country %></td>
        <td><%= record.total %></td>
      </tr>
      <% end %>
    </tbody>
</table>
