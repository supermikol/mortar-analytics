<table class="table tablesorter" id="historyTable" data-sort="table">
      <thead>
        <tr>
          <th><input type="checkbox" class="select-all" id="selectAll"></th>
          <th>Date</th>
          <th>Type</th>
          <th>Invoice Number</th>
          <th>Client/Vendor Name</th>
          <th>Category</th>
          <th>Description</th>
          <th>Country</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% records.each do |record| %>
        <tr>
          <td><input type="checkbox" class="select-row"></td>
          <td><%= record.date %></td>
          <td><%= record.kindof %></td>
          <td><a data-toggle="modal" data-target="#myModal" data-img="<%= record.doc_img %>">#<%= record.invoice_number %></td>
          <td><%= record.kindof == "Revenue" ? record.client : record.vendor %></td>
          <td><%= record.category %></td>
          <td><%= record.description %></td>
          <td><%= record.country %></td>
          <td><%= record.total %></td>
        </tr>
        <% end %>
      </tbody>
    </table>